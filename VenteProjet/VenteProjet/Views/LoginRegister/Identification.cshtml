@model VenteProjet.Models.Client

@{
    ViewBag.Title = "Identification";
}

<h2>Identification</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Client</legend>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.login)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.login)
            @Html.ValidationMessageFor(model => model.login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MotPasse)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MotPasse)
            @Html.ValidationMessageFor(model => model.MotPasse)
        </div>

        
        <p>
            <input type="submit" value="Se connecter" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Vous n'avez pas un compte", "Inscription","LoginRegister")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
